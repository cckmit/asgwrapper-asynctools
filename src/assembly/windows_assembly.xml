<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>win</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<files>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGwrapper-asynctools_LICENSE.txt</destName>
		</file>
		<file>
			<source>NOTICE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGwrapper-asynctools_NOTICE.txt</destName>
		</file>
		<file>
			<source>README.md</source>
			<outputDirectory>readme</outputDirectory>
			<destName>ASGwrapper-asynctools_README.md</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>tools/mpsat/LICENSE.MPSAT</include>
				<include>tools/mpsat/mpsat.exe</include>
				<include>tools/petrify/LICENSE.PETRIFY.txt</include>
				<include>tools/petrify/petrify.exe</include>
				<include>tools/petrify/petrify.dll</include>
				<include>tools/petrify/LICENSE.CYGWIN.txt</include>
				<include>tools/petrify/cygwin1.dll</include>
				<include>tools/punf/LICENSE.PUNF</include>
				<include>tools/punf/punf.exe</include>
				<include>tools/pcomp/LICENSE.PCOMP</include>
				<include>tools/pcomp/pcomp.exe</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>*:*:zip:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
